#include <stdio.h>

main() {
    
    int i; 
    int soma = 0;

    for (i = 1; i < 1000; i++) {
        
        if (i % 3 == 0 || i % 5 == 0) {
            
            soma += i;
        }
    }

    printf("A soma dos números positivos que se encontram abaixo de 1.000 que são múltiplos de 3 e 5 é: %d", soma);

    return 0;
}
