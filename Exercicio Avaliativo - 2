#include <stdio.h>
#include <math.h>

float calculardistancia(int x1, int y1, int x2, int y2) {
    
    return sqrt( pow(x2 - x1, 2) + pow(y2 - y1, 2) );
}

main() {
    
    int x1;
    int x2;
    int y1;
    int y2;
    float distancia;

    printf("Informe as coordenadas para a primeira posição:\n ");
    scanf("%d \n %d", &x1, &y1);
    
    printf("Informe as coordenadas para a segunda posição:\n ");
    scanf("%d \n %d", &x2, &y2);

    Distancia = calc_distancia(x1,y1,x2,y2);

    printf("Distancia: %f", Distancia);
}
