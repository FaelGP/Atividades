#include <stdio.h>
#define PI 3.14159

main() 
{
    float Raio; 
    float Area;
    float Volume;

    printf("Digite o valor do raio da esfera que deseja calcular: ");
    scanf("%f", &Raio);

    Area = 4 * PI * Raio * Raio;
    
    printf("Área da superfície da esfera: %.2f\n", Area);
    
    Volume = (4.0/3) * PI * Raio * Raio * Raio;
    
    printf("Volume da esfera é de: %.2f\n", Volume);

    return 0;
}
